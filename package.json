{
  "name": "smart-brief",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev:vite": "cross-env NODE_ENV=development vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "build:vite": "vite build",
    "build": "npm run build:vite && electron-builder",
    "build:win": "npm run build:vite && electron-builder --win",
    "build:mac": "npm run build:vite && electron-builder --mac",
    "build:linux": "npm run build:vite && electron-builder --linux"
  },
  "keywords": [],
  "author": {
    "name": "SmartBrief Team",
    "email": "jxtc163@163.com"
  },
  "license": "ISC",
  "description": "smartbrief",
  "dependencies": {
    "axios": "^1.7.9",
    "dompurify": "^3.2.3",
    "electron-store": "^10.0.0",
    "element-plus": "^2.9.0",
    "lodash": "^4.17.21",
    "marked": "^15.0.3",
    "mitt": "^3.0.1",
    "moment": "^2.30.1",
    "simple-git": "^3.22.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/cli": "^5.0.8",
    "babel-loader": "^9.2.1",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "vite": "^5.1.4",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.aireport.app",
    "productName": "SmartBrief",
    "copyright": "Copyright Â© 2024",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "services/**/*",
      "electron/**/*",
      "src/**/*",
      "!**/node_modules/*"
    ],
    "extraResources": [
      {
        "from": "logo/",
        "to": "logo/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "logo/macos.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64", "universal"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64", "universal"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "logo/windows.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "ia32", "arm64"]
        }
      ]
    },
    "linux": {
      "icon": "logo/linux.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64", "armv7l"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64", "armv7l"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64", "armv7l"]
        }
      ],
      "category": "Office",
      "maintainer": "SmartBrief Team <jxtc163@163.com>"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
